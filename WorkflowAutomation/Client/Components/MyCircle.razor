<button class="btn btn-outline-secondary rounded-circle" @onclick="() => showComponent = !showComponent">@Text</button>
@if (showComponent)
{   <hr/>
    <label style="font-size:15px">@SubText</label>
    <hr />
}


@code {
            [Parameter]
            public string Text { get; set; }
            [Parameter]
            public string SubText{ get; set; }
            bool showComponent = false;
}
